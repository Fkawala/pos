<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="SelfServiceWidgetHome">
        <div class='self-service-screen screen'>
            <div class='screen-content'>
                <div class='left-content pc33'>
                    <div class="centered">
                        <div class='big-button green tare'>
                            Tare<br/>a container
                            <span class='ico foodbox' />
                         </div>
                    </div>
                </div>
                <div class='left-content middle'>
                    <div class="centered">
                        <div class='big-button red weight'>
                            Weight a product in a container
                            <span class='ico foodinbox' />
                         </div>
                    </div>
                </div>
                <div class='right-content pc33'>
                    <div class="centered">
                        <div class='big-button blue weight'>
                            Weight<br/>a product
                            <span class='ico scale' />
                         </div>
                    </div>
                </div>
             </div>
         </div>
    </t>

    <t t-name="SelfServiceProduct">
            <div class="self-product-screen screen">
                <div class="leftpane">
                    <div class='window'>
                        <div class='subwindow'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix'>
                                    <div class="placeholder-OrderWidget"></div>
                                </div>
                            </div>
                        </div>

                        <div class='subwindow collapsed'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix pads'>
                                    <div class="control-buttons oe_hidden"></div>
                                    <div class="placeholder-ActionpadWidget"></div>
                                    </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="rightpane">
                    <table class="layout-table">

                        <tr class="header-row">
                            <td class="header-cell">

                                    <div class="placeholder-SelfServiceSearchWidget"></div>
    </td>
                        </tr>

                        <tr class="content-row">
                            <td class="content-cell">
                                <div class="content-container">
                                    <span class="placeholder-ProductListWidget" />
                                </div>
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
        </t>

    <t t-name="SelfServiceActionpadWidget">
        <div class="actionpad">
            <button class='button back'>
                <i class='fa fa-angle-double-left'></i>
                Back
            </button>
            <button class='button print'>
                <div class='print-circle'>
                    <i class='fa fa-chevron-right' />
                </div>
                Validate
            </button>
        </div>
    </t>

    <t t-name="SelfServiceSearchWidget">
        <div class="searchbox">
        <input type="text" placeholder="&#xF002; Search Products" style="font-family:Arial, FontAwesome"/>
                            </div>
    </t>
</templates>
